{
  "name": "@wundr.io/plugin-system",
  "version": "1.0.0",
  "description": "Plugin system and base interfaces for the Wundr platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist", "src"],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "semver": "^7.6.3",
    "@wundr.io/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/semver": "^7.5.8",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": ["wundr", "plugin", "system", "interfaces", "extensibility"]
}
