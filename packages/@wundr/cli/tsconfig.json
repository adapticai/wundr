{
  "extends": "../../../config/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": ".",
    "paths": {
      "@wundr.io/governance": ["../governance/dist/index"],
      "@wundr.io/governance/*": ["../governance/dist/*"],
      "@wundr.io/guardian-dashboard": ["../guardian-dashboard/dist/index"],
      "@wundr.io/guardian-dashboard/*": ["../guardian-dashboard/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/commands/project-update.ts",
    "src/commands/worktree.ts",
    "src/commands/alignment.ts",
    "src/lib/**/*"
  ]
}
