{
  "name": "@wundr.io/neolith-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Neolith - Exposes Neolith workspace actions as MCP tools for OrchestratorDaemon integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "neolith-mcp": "./bin/neolith-mcp-server.js"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "build:tsc": "tsc",
    "build:watch": "tsc --watch",
    "build:prod": "npm run clean && tsc",
    "clean": "rm -rf dist coverage",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:dev": "ts-node src/index.ts",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build:prod"
  },
  "dependencies": {
    "@wundr.io/core": "workspace:*",
    "@wundr.io/mcp-server": "workspace:*",
    "eventemitter3": "^5.0.1",
    "uuid": "^11.0.3",
    "zod": "^3.25.76",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jest": "^29.0.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "neolith",
    "workspace-management",
    "orchestrator-daemon",
    "claude-code",
    "ai-tools",
    "wundr"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/adapticai/wundr.git",
    "directory": "packages/@wundr/neolith-mcp-server"
  },
  "bugs": {
    "url": "https://github.com/adapticai/wundr/issues"
  },
  "homepage": "https://wundr.io",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": ["dist", "bin", "README.md"],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "mcp": {
    "name": "neolith",
    "description": "Neolith workspace management MCP tools for OrchestratorDaemon and Claude Code",
    "version": "1.0.0",
    "installCommand": "claude mcp add neolith npx @wundr.io/neolith-mcp-server",
    "capabilities": {
      "tools": true,
      "resources": true,
      "prompts": false
    }
  }
}
