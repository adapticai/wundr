{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "jsx": "react",
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@theme/*": ["./src/theme/*"]
    },
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "docusaurus.config.ts",
    "sidebars.ts",
    "sidebars-*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    ".docusaurus"
  ]
}