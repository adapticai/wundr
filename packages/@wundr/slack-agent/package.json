{
  "name": "@wundr.io/slack-agent",
  "version": "1.0.6",
  "description": "Slack agent capabilities for Orchestrator agents operating as full users in Slack workspaces",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist", "src"],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@slack/socket-mode": "^2.0.0",
    "@slack/web-api": "^7.12.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.2.2"
  },
  "peerDependenciesMeta": {
    "@slack/web-api": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "wundr",
    "slack",
    "agent",
    "orchestrator",
    "profile",
    "bot",
    "workspace"
  ]
}
