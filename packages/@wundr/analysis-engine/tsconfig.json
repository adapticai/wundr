{
  "extends": "../../../config/typescript/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/types/index.ts",
    "src/utils/index.ts",
    "src/simple-analyzer.ts",
    "src/index.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/analyzers/**",
    "src/engines/**",
    "src/cli.ts"
  ]
}