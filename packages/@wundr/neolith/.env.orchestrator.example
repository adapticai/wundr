# ============================================================================
# Orchestrator Daemon Configuration
# ============================================================================
#
# This file contains environment variables for configuring the orchestrator
# daemon integration in Neolith. Copy this file to .env.local and adjust
# values as needed.
#

# Enable orchestrator mode (allows orchestrators to run background daemons)
ORCHESTRATOR_MODE=true
NEXT_PUBLIC_ORCHESTRATOR_MODE=true

# Auto-start daemon when orchestrator logs in (default: true)
DAEMON_AUTO_START=true
NEXT_PUBLIC_DAEMON_AUTO_START=true

# Heartbeat interval in milliseconds (default: 30000 = 30 seconds)
DAEMON_HEARTBEAT_INTERVAL=30000
NEXT_PUBLIC_DAEMON_HEARTBEAT_INTERVAL=30000

# Health check interval in milliseconds (default: 60000 = 1 minute)
DAEMON_HEALTH_CHECK_INTERVAL=60000
NEXT_PUBLIC_DAEMON_HEALTH_CHECK_INTERVAL=60000

# Auto-restart daemon on failure (default: true)
DAEMON_AUTO_RESTART=true
NEXT_PUBLIC_DAEMON_AUTO_RESTART=true

# Maximum restart attempts before giving up (default: 3)
DAEMON_MAX_RESTART_ATTEMPTS=3
NEXT_PUBLIC_DAEMON_MAX_RESTART_ATTEMPTS=3

# Enable verbose daemon logging (default: false)
DAEMON_VERBOSE=false
NEXT_PUBLIC_DAEMON_VERBOSE=false

# Maximum concurrent conversations per orchestrator (default: 10)
DAEMON_MAX_CONCURRENT_CONVERSATIONS=10
NEXT_PUBLIC_DAEMON_MAX_CONCURRENT_CONVERSATIONS=10
