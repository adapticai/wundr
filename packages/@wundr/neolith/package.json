{
  "name": "@wundr/neolith",
  "version": "0.1.0",
  "private": true,
  "description": "Neolith - AI-powered organizational structure generation platform for Wundr hedge funds",
  "keywords": [
    "neolith",
    "ai",
    "organizational-structure",
    "hedge-fund",
    "wundr",
    "monorepo"
  ],
  "license": "UNLICENSED",
  "author": "Adaptic.ai Engineering Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/adaptic-ai/wundr.git",
    "directory": "packages/@wundr/neolith"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "echo 'Neolith parent package - dev handled by turbo for individual apps'",
    "dev:desktop": "concurrently \"pnpm --filter @neolith/web run dev\" \"sleep 5 && pnpm --filter @neolith/desktop run dev\"",
    "build": "echo 'Neolith parent package - builds handled by turbo for individual apps'",
    "lint": "pnpm --filter @neolith/* run lint",
    "lint:fix": "pnpm --filter @neolith/* run lint -- --fix",
    "typecheck": "pnpm --filter @neolith/* run typecheck",
    "test": "pnpm --filter @neolith/* run test",
    "test:watch": "pnpm --filter @neolith/* run test -- --watch",
    "test:coverage": "pnpm --filter @neolith/* run test -- --coverage",
    "clean": "pnpm --filter @neolith/* run clean && rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "echo 'Neolith App monorepo ready'",
    "package:mac": "pnpm --filter @neolith/desktop run package:mac",
    "package:win": "pnpm --filter @neolith/desktop run package:win",
    "package:linux": "pnpm --filter @neolith/desktop run package:linux"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^20.14.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.6",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.0",
    "turbo": "^2.0.0",
    "typescript": "^5.4.5",
    "vitest": "^2.1.6"
  }
}
