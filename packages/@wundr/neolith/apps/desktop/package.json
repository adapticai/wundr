{
  "name": "@neolith/desktop",
  "version": "0.1.0",
  "description": "Genesis Desktop Application - AI-powered organizational design",
  "main": "dist/main.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.json && electron .",
    "dev:renderer": "echo 'Renderer dev server placeholder'",
    "build": "tsc -p tsconfig.json",
    "build:all": "npm run build && npm run package",
    "package": "electron-builder build --publish never",
    "package:mac": "electron-builder build --mac --publish never",
    "package:win": "electron-builder build --win --publish never",
    "package:linux": "electron-builder build --linux --publish never",
    "clean": "rm -rf dist out",
    "typecheck": "tsc --noEmit",
    "lint": "eslint electron --ext .ts"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "build": {
    "extends": "./electron-builder.yml"
  },
  "author": {
    "name": "Adaptic.ai",
    "email": "engineering@adaptic.ai"
  },
  "license": "UNLICENSED"
}
