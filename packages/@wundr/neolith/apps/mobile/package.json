{
  "name": "@neolith/mobile",
  "version": "0.1.0",
  "private": true,
  "description": "Genesis App - Mobile (iOS & Android) via Capacitor",
  "scripts": {
    "build": "echo 'Mobile build depends on web build - run npx cap sync after web build'",
    "build:full": "npm run build:web && npx cap sync",
    "build:web": "cd ../web && npm run build",
    "sync": "npx cap sync",
    "sync:ios": "npx cap sync ios",
    "sync:android": "npx cap sync android",
    "open:ios": "npx cap open ios",
    "open:android": "npx cap open android",
    "run:ios": "npx cap run ios",
    "run:android": "npx cap run android",
    "add:ios": "npx cap add ios",
    "add:android": "npx cap add android"
  },
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/app": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/preferences": "^6.0.0",
    "@capacitor/push-notifications": "^6.0.0",
    "@capacitor/splash-screen": "^6.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
