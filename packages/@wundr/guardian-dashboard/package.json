{
  "name": "@wundr/guardian-dashboard",
  "version": "1.0.0",
  "description": "Guardian Dashboard for alignment drift monitoring and debt calculation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist", "src"],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "handlebars": "^4.7.8",
    "chalk": "^5.3.0",
    "date-fns": "^3.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.2.2",
    "eslint": "^8.57.1",
    "prettier": "^3.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "wundr",
    "guardian",
    "dashboard",
    "drift",
    "alignment",
    "monitoring"
  ]
}
