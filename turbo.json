{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    ".env",
    ".env.local",
    ".env.production",
    ".env.development",
    "package.json",
    "pnpm-workspace.yaml",
    "pnpm-lock.yaml",
    "tsconfig.json",
    "turbo.json"
  ],
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "DATABASE_URL",
    "REDIS_URL",
    "AUTH_SECRET",
    "GITHUB_TOKEN",
    "VERCEL_URL",
    "ANTHROPIC_API_KEY",
    "OPENAI_API_KEY",
    "WUNDR_API_URL",
    "NEXT_PUBLIC_API_URL",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL"
  ],
  "remoteCache": {
    "signature": true
  },
  "tasks": {
    "build": {
      "dependsOn": ["^build", "typecheck"],
      "persistent": false,
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "app/**/*.{ts,tsx}",
        "components/**/*.{ts,tsx}",
        "lib/**/*.{ts,tsx}",
        "hooks/**/*.{ts,tsx}",
        "types/**/*.{ts,tsx}",
        "utils/**/*.{ts,tsx}",
        "styles/**/*.{css,scss}",
        "public/**/*",
        "package.json",
        "tsconfig.json",
        "next.config.*",
        "tailwind.config.*",
        "postcss.config.*",
        "*.config.{js,ts,mjs}"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "!.next/lock",
        "build/**",
        "out/**"
      ],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "build:watch": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "PORT", "NEXT_PUBLIC_*"],
      "dependsOn": []
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "app/**/*.{ts,tsx}",
        "components/**/*.{ts,tsx}",
        "lib/**/*.{ts,tsx}",
        "hooks/**/*.{ts,tsx}",
        "types/**/*.{ts,tsx}",
        "utils/**/*.{ts,tsx}",
        "tests/**/*.{ts,tsx}",
        "__tests__/**/*.{ts,tsx}",
        "*.{ts,tsx}",
        "tsconfig.json",
        "tsconfig.*.json"
      ],
      "outputs": ["dist/**/*.d.ts", "tsconfig.tsbuildinfo"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "app/**/*.{ts,tsx}",
        "components/**/*.{ts,tsx}",
        "lib/**/*.{ts,tsx}",
        "hooks/**/*.{ts,tsx}",
        "types/**/*.{ts,tsx}",
        "utils/**/*.{ts,tsx}",
        "tests/**/*.{ts,tsx}",
        "__tests__/**/*.{ts,tsx}",
        "*.{js,ts,tsx,jsx}",
        ".eslintrc.*",
        "eslint.config.*",
        "package.json"
      ],
      "outputs": [".eslintcache"]
    },
    "lint:fix": {
      "dependsOn": ["^lint"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "app/**/*.{ts,tsx}",
        "components/**/*.{ts,tsx}",
        "lib/**/*.{ts,tsx}",
        "hooks/**/*.{ts,tsx}",
        "types/**/*.{ts,tsx}",
        "utils/**/*.{ts,tsx}",
        "tests/**/*.{ts,tsx}",
        "__tests__/**/*.{ts,tsx}",
        "*.{js,ts,tsx,jsx}",
        ".eslintrc.*",
        "eslint.config.*",
        "package.json"
      ],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "app/**/*.{ts,tsx}",
        "components/**/*.{ts,tsx}",
        "lib/**/*.{ts,tsx}",
        "hooks/**/*.{ts,tsx}",
        "types/**/*.{ts,tsx}",
        "utils/**/*.{ts,tsx}",
        "tests/**/*",
        "__tests__/**/*",
        "test/**/*",
        "*.test.{ts,tsx,js,jsx}",
        "*.spec.{ts,tsx,js,jsx}",
        "jest.config.*",
        "jest.setup.*",
        "package.json"
      ],
      "outputs": ["coverage/**", "test-results/**", ".nyc_output/**"],
      "env": ["NODE_ENV", "CI"]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "tests/unit/**/*",
        "__tests__/**/*",
        "*.test.{ts,tsx,js,jsx}",
        "*.spec.{ts,tsx,js,jsx}",
        "jest.config.*",
        "jest.setup.*"
      ],
      "outputs": ["coverage/**"]
    },
    "test:integration": {
      "dependsOn": ["^build", "test:unit"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "tests/integration/**/*",
        "tests/e2e/**/*",
        "jest.config.*",
        "playwright.config.*"
      ],
      "outputs": ["coverage/**", "test-results/**", "playwright-report/**"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "app/**/*.{ts,tsx}",
        "components/**/*.{ts,tsx}",
        "tests/e2e/**/*",
        "__tests__/**/*",
        "playwright.config.*",
        "package.json"
      ],
      "outputs": ["test-results/**", "playwright-report/**"],
      "cache": false
    },
    "test:coverage": {
      "dependsOn": ["^build", "test:unit"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "tests/**/*",
        "__tests__/**/*",
        "jest.config.*",
        "jest.setup.*"
      ],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test:ci": {
      "dependsOn": ["^build", "typecheck", "lint"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "tests/**/*",
        "__tests__/**/*",
        "jest.config.*",
        "jest.setup.*",
        "playwright.config.*"
      ],
      "outputs": ["coverage/**", "test-results/**", "playwright-report/**"],
      "env": ["NODE_ENV", "CI"]
    },
    "format": {
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,md,css,scss}",
        "app/**/*.{ts,tsx,json,md,css,scss}",
        "components/**/*.{ts,tsx,json,md,css,scss}",
        "lib/**/*.{ts,tsx,json,md,css,scss}",
        "hooks/**/*.{ts,tsx,json,md,css,scss}",
        "types/**/*.{ts,tsx,json,md}",
        "utils/**/*.{ts,tsx,json,md}",
        "tests/**/*.{ts,tsx,json,md}",
        "__tests__/**/*.{ts,tsx,json,md}",
        "docs/**/*.{md,mdx}",
        "*.{js,ts,tsx,jsx,json,md,css,scss}",
        ".prettierrc*",
        "prettier.config.*",
        "package.json"
      ],
      "cache": false
    },
    "format:check": {
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,md,css,scss}",
        "app/**/*.{ts,tsx,json,md,css,scss}",
        "components/**/*.{ts,tsx,json,md,css,scss}",
        "lib/**/*.{ts,tsx,json,md,css,scss}",
        "hooks/**/*.{ts,tsx,json,md,css,scss}",
        "types/**/*.{ts,tsx,json,md}",
        "utils/**/*.{ts,tsx,json,md}",
        "tests/**/*.{ts,tsx,json,md}",
        "__tests__/**/*.{ts,tsx,json,md}",
        "docs/**/*.{md,mdx}",
        "*.{js,ts,tsx,jsx,json,md,css,scss}",
        ".prettierrc*",
        "prettier.config.*",
        "package.json"
      ]
    },
    "clean": {
      "cache": false
    }
  },
  "ui": "tui"
}
