{
  "name": "@adapticai/wundr",
  "version": "1.0.0",
  "description": "The Intelligent CLI-Based Coding Agents Orchestrator - Transform monolithic chaos into architectural elegance with AI-powered refactoring at scale",
  "keywords": [
    "wundr",
    "coding-agents",
    "ai-refactoring",
    "monorepo",
    "refactoring",
    "analysis",
    "visualization",
    "dashboard",
    "cli-tool",
    "integration"
  ],
  "homepage": "https://wundr.io",
  "bugs": {
    "url": "https://github.com/adapticai/wundr/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adapticai/wundr.git"
  },
  "license": "MIT",
  "author": "Wundr, by Adaptic.ai",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "wundr": "./bin/wundr.js"
  },
  "files": [
    "dist",
    "bin",
    "src",
    "templates",
    "docs",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "turbo build",
    "build:parallel": "turbo build --parallel",
    "build:staged": "./scripts/turbo-ci.sh build --staged",
    "build:all": "tsc",
    "build:watch": "turbo build:watch",
    "clean": "turbo clean && pnpm -r clean",
    "create:package": "ts-node scripts/create-package.ts new",
    "dev": "turbo dev",
    "dev:computer-setup": "npx tsx packages/@wundr/cli/src/index.ts computer-setup",
    "dev:create": "npx tsx packages/@wundr/cli/src/index.ts create",
    "dev:analyze": "npx tsx packages/@wundr/cli/src/index.ts analyze",
    "dev:cli": "npx tsx packages/@wundr/cli/src/index.ts",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "postinstall": "node -e \"if (process.env.CI !== 'true') { require('child_process').execSync('turbo build --filter=@wundr.io/core --filter=@wundr.io/shared-config', {stdio: 'inherit'}); }\"",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "prepare": "husky",
    "test": "turbo test",
    "test:unit": "turbo test:unit",
    "test:integration": "turbo test:integration",
    "test:performance": "jest tests/performance --runInBand",
    "test:e2e": "turbo test:e2e",
    "test:quality-gates": "jest tests/quality-gates",
    "test:coverage": "turbo test:coverage",
    "test:watch": "turbo test:watch",
    "test:ci": "turbo test:ci",
    "typecheck": "turbo typecheck",
    "ci": "./scripts/turbo-ci.sh ci",
    "turbo:stats": "./scripts/turbo-ci.sh stats",
    "turbo:clean": "./scripts/turbo-ci.sh clean"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-progress": "^1.1.7",
    "chalk": "^5.3.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.3.1",
    "glob": "^10.3.10",
    "inquirer": "^9.2.0",
    "ora": "^5.4.1",
    "pnpm": "^10.14.0",
    "ts-morph": "^21.0.1",
    "ts-node": "^10.9.1",
    "uuid": "^11.0.3",
    "yaml": "^2.3.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/react": "^19.1.9",
    "@types/semver": "^7.7.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "chokidar": "^4.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "keytar": "^7.9.0",
    "lint-staged": "^16.1.4",
    "prettier": "^3.3.3",
    "sqlite3": "^5.1.7",
    "ts-jest": "^29.4.1",
    "tslib": "^2.8.1",
    "turbo": "^2.5.5",
    "typescript": "^5.2.2",
    "winston": "^3.17.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,yaml,yml,md}": [
      "prettier --write"
    ]
  }
}
