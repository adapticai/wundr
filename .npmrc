# Force use of pnpm
engine-strict=false

# Allow all packages to run build scripts
# This is needed for native modules and generated code
ignore-scripts=false

# Enable pre/post scripts
enable-pre-post-scripts=true

# Allow all build dependencies to execute
side-effects-cache=true

# =============================================================================
# Netlify Deployment Configuration (for packages/@wundr/neolith)
# =============================================================================
# These settings enable dependency hoisting required for Netlify Lambda runtime.
# See: https://opennext.js.org/netlify#pnpm-support

# Public hoisting - makes all packages available at root node_modules
# Required for Netlify server functions to resolve Next.js modules
public-hoist-pattern[]=*

# shamefully-hoist hoists ALL dependencies to root (like npm/yarn)
# This is required for Netlify Lambda to resolve modules correctly
shamefully-hoist=true
