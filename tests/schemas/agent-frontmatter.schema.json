{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wundr.dev/schemas/agent-frontmatter.json",
  "title": "Agent Frontmatter Schema",
  "description": "Schema for validating agent file frontmatter in Wundr project",
  "type": "object",
  "required": ["name", "type", "description", "capabilities", "config"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "minLength": 2,
      "maxLength": 50,
      "description": "Agent name in kebab-case"
    },
    "type": {
      "type": "string",
      "enum": [
        "coordinator",
        "developer",
        "tester",
        "reviewer",
        "analyzer",
        "specialist",
        "orchestrator",
        "manager",
        "engineer",
        "architect"
      ],
      "description": "Agent type category"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "Agent description"
    },
    "capabilities": {
      "type": "array",
      "minItems": 1,
      "maxItems": 20,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 3,
        "maxLength": 100
      },
      "description": "List of agent capabilities"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9-]*$"
      },
      "description": "Other agents this agent depends on"
    },
    "config": {
      "type": "object",
      "required": ["priority", "maxConcurrent"],
      "properties": {
        "priority": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low"],
          "description": "Agent priority level"
        },
        "maxConcurrent": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum concurrent instances"
        },
        "timeout": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 3600000,
          "description": "Timeout in milliseconds"
        },
        "retries": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "description": "Number of retry attempts"
        },
        "memoryEnabled": {
          "type": "boolean",
          "description": "Whether memory is enabled"
        },
        "neuralEnabled": {
          "type": "boolean",
          "description": "Whether neural features are enabled"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": {
          "type": "string"
        },
        "created": {
          "type": "string",
          "format": "date"
        },
        "updated": {
          "type": "string",
          "format": "date"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          }
        }
      }
    }
  }
}
