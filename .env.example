# =============================================================================
# Wundr Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to git - it contains secrets!
#
# This file covers all environment variables used across the wundr monorepo
# including: Orchestrator Daemon, Session Managers, MCP Servers, Integrations, and more
# =============================================================================

# -----------------------------------------------------------------------------
# AI Provider API Keys
# -----------------------------------------------------------------------------
# At least one AI provider is required for agent functionality

# Anthropic (Claude) - Primary AI provider for Claude Code/Flow
ANTHROPIC_API_KEY=sk-ant-api03-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# OpenAI - Used by some orchestration frameworks and agent-eval
OPENAI_API_KEY=sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Google Gemini - Used for embeddings in RAG utilities
GEMINI_API_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# -----------------------------------------------------------------------------
# Orchestrator Daemon Configuration
# -----------------------------------------------------------------------------
# Virtual Principal daemon settings for machine-level orchestration

# Orchestrator Identity (displayed in communications and audit logs)
VP_NAME="Virtual Principal"
VP_EMAIL="vp@example.com"
VP_AVATAR_URL="https://example.com/avatar.png"
VP_SLACK_ID="U0123456789"

# Orchestrator Resource Limits
VP_MAX_CONCURRENT_SESSIONS=5
VP_MEMORY_PER_SESSION="4GB"
VP_TOTAL_MEMORY_LIMIT="16GB"
VP_CPU_CORES_PER_SESSION=2

# -----------------------------------------------------------------------------
# Slack Integration
# -----------------------------------------------------------------------------
# Required if using Orchestrator daemon Slack integration

SLACK_BOT_TOKEN=xoxb-XXXXXXXXXXXX-XXXXXXXXXXXX-XXXXXXXXXXXXXXXXXXXXXXXX
SLACK_APP_TOKEN=xapp-X-XXXXXXXXXXXX-XXXXXXXXXXXX-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
SLACK_SIGNING_SECRET=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
SLACK_CHANNEL_ID=C0123456789

# -----------------------------------------------------------------------------
# Gmail Integration
# -----------------------------------------------------------------------------
# Required if using Orchestrator daemon Gmail integration

GMAIL_CLIENT_ID=XXXXXXXXXXXX-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=GOCSPX-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
GMAIL_REFRESH_TOKEN=1//XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# -----------------------------------------------------------------------------
# Google Drive Integration
# -----------------------------------------------------------------------------
# Required if using Orchestrator daemon Google Drive integration

GDRIVE_CLIENT_ID=XXXXXXXXXXXX-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX.apps.googleusercontent.com
GDRIVE_CLIENT_SECRET=GOCSPX-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
GDRIVE_REFRESH_TOKEN=1//XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# -----------------------------------------------------------------------------
# Twilio Integration
# -----------------------------------------------------------------------------
# Required if using Orchestrator daemon SMS/voice integration

TWILIO_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TWILIO_AUTH_TOKEN=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------------------------------------------------------
# GitHub Integration
# -----------------------------------------------------------------------------
# Required for GitHub MCP tools and code analysis

GITHUB_TOKEN=ghp_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# -----------------------------------------------------------------------------
# Deployment Platforms
# -----------------------------------------------------------------------------
# Used by deployment-monitor agent for CI/CD monitoring

# Railway
RAILWAY_API_TOKEN=XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX
RAILWAY_PROJECT_ID=XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX

# Netlify
NETLIFY_ACCESS_TOKEN=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
NETLIFY_SITE_ID=XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX

# -----------------------------------------------------------------------------
# External Tools & Services
# -----------------------------------------------------------------------------

# Firecrawl - Web scraping and crawling
FIRECRAWL_API_KEY=fc-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Used by @wundr.io/security package

SECURITY_AUDIT_ENABLED=true
SECURITY_RBAC_CACHE_TTL=3600000
SECURITY_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Development & Testing
# -----------------------------------------------------------------------------
# Used during development and testing

NODE_ENV=development
LOG_LEVEL=info
DEBUG=false

# Test configuration
TEST_BASE_URL=http://localhost:3000
WUNDR_TEST_DIR=/tmp/wundr-tests

# -----------------------------------------------------------------------------
# Remote Setup (Tailscale/RustDesk)
# -----------------------------------------------------------------------------
# Used by scripts/remote-setup for headless machine provisioning

# Tailscale
TAILSCALE_AUTH_KEY=tskey-auth-XXXXXXXXXXXXXXXXXXXX
DEVICE_NAME=studio-01
TS_TAGS=tag:remote,tag:studio

# RustDesk (optional)
# RUSTDESK_ID_SERVER=id.example.com
# RUSTDESK_RELAY_SERVER=relay.example.com

# Power Settings
PREVENT_SLEEP=true
DISPLAY_SLEEP_MINS=10

# -----------------------------------------------------------------------------
# CI/CD Environment Variables
# -----------------------------------------------------------------------------
# These are typically set by CI systems, not in .env files
# Listed here for documentation purposes only

# CI=true                    # Set by most CI systems
# GITHUB_ACTIONS=true        # Set by GitHub Actions
# JENKINS_URL=...            # Set by Jenkins
# BUILDKITE=true             # Set by Buildkite
# CIRCLECI=true              # Set by CircleCI
# TRAVIS=true                # Set by Travis CI
# GITLAB_CI=true             # Set by GitLab CI
