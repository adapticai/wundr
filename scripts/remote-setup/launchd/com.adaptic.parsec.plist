<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<!--
  LaunchDaemon for Parsec host - auto-start at boot
  Managed by: setup_remote_mac.sh

  This daemon ensures Parsec runs automatically on system boot and stays running.
  It will restart the service if it crashes.

  Installation:
    sudo cp com.adaptic.parsec.plist /Library/LaunchDaemons/
    sudo chown root:wheel /Library/LaunchDaemons/com.adaptic.parsec.plist
    sudo chmod 644 /Library/LaunchDaemons/com.adaptic.parsec.plist
    sudo launchctl load -w /Library/LaunchDaemons/com.adaptic.parsec.plist

  Uninstallation:
    sudo launchctl unload /Library/LaunchDaemons/com.adaptic.parsec.plist
    sudo rm /Library/LaunchDaemons/com.adaptic.parsec.plist
-->
<plist version="1.0">
<dict>
    <!-- Unique identifier for this daemon -->
    <key>Label</key>
    <string>com.adaptic.parsec</string>

    <!-- Path to the Parsec executable -->
    <key>ProgramArguments</key>
    <array>
        <string>/Applications/Parsec.app/Contents/MacOS/Parsec</string>
    </array>

    <!-- Start automatically when the daemon is loaded (at boot) -->
    <key>RunAtLoad</key>
    <true/>

    <!-- Keep the process running; restart if it crashes -->
    <key>KeepAlive</key>
    <true/>

    <!-- Log stdout to file -->
    <key>StandardOutPath</key>
    <string>/var/log/remote-setup/parsec.log</string>

    <!-- Log stderr to file -->
    <key>StandardErrorPath</key>
    <string>/var/log/remote-setup/parsec.error.log</string>

    <!-- Throttle rapid restarts (wait 30 seconds between restart attempts) -->
    <key>ThrottleInterval</key>
    <integer>30</integer>

    <!-- Environment variables (optional) -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>

    <!-- Process type hint -->
    <key>ProcessType</key>
    <string>Interactive</string>

    <!-- Abandon process group on exit (prevents orphaned processes) -->
    <key>AbandonProcessGroup</key>
    <true/>
</dict>
</plist>
